<Window x:Class="KCS_LabelEditor_2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KCS_LabelEditor_2"
        mc:Ignorable="d"
        Title="MainWindow" Height="797.368" Width="1548.421" Closing="Window_Closing">
    <Grid x:Name="Main">
        <DockPanel Grid.ColumnSpan="5">
            <Menu DockPanel.Dock="Top" Height="20" VerticalAlignment="Top">
                <MenuItem Header="_File">
                    <MenuItem x:Name="SaveButton" Header="_Save" Click="SaveButton_Click" />
                    <Separator />
                    <MenuItem x:Name="ExitButton" Header="_Exit" Click="ExitButton_Click" />
                </MenuItem>
            </Menu>
        </DockPanel>
        <TextBox x:Name="PathTextbox" Height="28" VerticalAlignment="Top" Margin="29,38,1200,0" Text="{Binding Path=AxLabelPath}"/>
        <ComboBox x:Name="FileIdCombobox" Margin="655,38,651,701" SelectedItem="{Binding SelectedFileId}" ItemsSource="{Binding FileIds}" SelectionChanged="FileId_SelectionChanged"/>
        <ComboBox x:Name="LanguageCombobox" Margin="422,37,940,701" SelectedItem="{Binding SelectedLanguage}" ItemsSource="{Binding Languages}" SelectionChanged="Language_SelectionChanged"/>
        <CheckBox x:Name="AutoTranslateCheckbox" Content="AutoTranslate" VerticalAlignment="Top" Margin="1213,48,-1213,0" IsChecked="{Binding AutoTranslate}"/>

        <Button x:Name="AddLabelButton" Content="AddLabel" VerticalAlignment="Top" Width="75" Margin="938,41,527,0" Click="AddLabelButton_Click"/>
        <Button Name="GetPathButton" Margin="345,33,1149,697" Click="GetPath_Click" Height="28" >...</Button>
        <DataGrid x:Name="MainGrid" HorizontalAlignment="Left" Height="307" Margin="29,122,0,0" SelectedItem="{Binding SelectedLabel}" VerticalAlignment="Top" Width="1485" AutoGeneratingColumn="InitColumns" Grid.ColumnSpan="4" SelectionChanged="MainGrid_SelectionChanged" CanUserAddRows="False" SelectionMode="Single" CopyingRowClipboardContent="Grids_CopyingRowClipboardContent"/>
        <DataGrid x:Name="SubGrid" HorizontalAlignment="Left" Height="307" Margin="29,434,0,0" VerticalAlignment="Top" Width="1485" AutoGeneratingColumn="InitColumns" Grid.ColumnSpan="4" CanUserAddRows="False" CopyingRowClipboardContent="Grids_CopyingRowClipboardContent"/>
        <Button x:Name="RenameLabelButton" Content="RenameLabel" VerticalAlignment="Top" Margin="1038,41,403,0" Click="RenameLabelButton_Click"/>
        <Button x:Name="DeleteLabelButton" Content="DeleteLabel" VerticalAlignment="Top" Margin="1030,80,411,0" Click="DeleteLabelButton_Click"/>

    </Grid>
</Window>
