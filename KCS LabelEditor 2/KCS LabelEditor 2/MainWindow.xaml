<Window x:Class="KCS_LabelEditor_2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KCS_LabelEditor_2"
        mc:Ignorable="d"
        Title="MainWindow" Height="797.368" Width="1548.421" Closing="Window_Closing">
    <Grid x:Name="Main">
        <DockPanel Grid.ColumnSpan="5">
            <Menu DockPanel.Dock="Top" Height="20" VerticalAlignment="Top">
                <MenuItem Header="_File">
                    <MenuItem Header="_New" />
                    <MenuItem Header="_Open" />
                    <MenuItem Header="_Save" />
                    <Separator />
                    <MenuItem Header="_Exit" />
                </MenuItem>
            </Menu>
        </DockPanel>
        <TextBox x:Name="Path" Height="28" VerticalAlignment="Top" Margin="29,38,1200,0" Text="{Binding Path=AxLabelPath}"/>
        <ComboBox x:Name="FileId" Margin="655,38,651,701" SelectedItem="{Binding SelectedFileId}" ItemsSource="{Binding FileIds}" SelectionChanged="FileId_SelectionChanged"/>
        <ComboBox x:Name="Language" Margin="422,37,940,701" SelectedItem="{Binding SelectedLanguage}" ItemsSource="{Binding Languages}" SelectionChanged="Language_SelectionChanged"/>

        <Button Name="GetPath" Margin="345,33,1149,697" Click="GetPath_Click" Height="28" >...</Button>
        <DataGrid x:Name="MainGrid" HorizontalAlignment="Left" Height="307" Margin="29,122,0,0" SelectedItem="{Binding SelectedLabel}" VerticalAlignment="Top" Width="1485" AutoGeneratingColumn="InitColumns" Grid.ColumnSpan="4" SelectionChanged="MainGrid_SelectionChanged" CanUserAddRows="False"/>
        <DataGrid x:Name="SubGrid" HorizontalAlignment="Left" Height="307" Margin="29,434,0,0" VerticalAlignment="Top" Width="1485" AutoGeneratingColumn="InitColumns" Grid.ColumnSpan="4" CanUserAddRows="False"/>

    </Grid>
</Window>
